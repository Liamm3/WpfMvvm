<Window x:Class="lmwohlfart.tsbw.WpfMvvm.Ui.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lmwohlfart.tsbw.WpfMvvm.Ui.Desktop"
        mc:Ignorable="d"
        Title="{Binding WindowTitle, Mode=OneWay}" Height="300" Width="300"
        DataContext="{Binding Main, Source={StaticResource Locator}}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label>Name of the thing:</Label>
            <TextBox Text="{Binding Input, UpdateSourceTrigger=PropertyChanged}" />
            <Button Command="{Binding OnButtonClick}">Add thing</Button>
        </StackPanel>
        <DataGrid Grid.Column="1"
                  ItemsSource="{Binding Things}"
                  VerticalAlignment="Stretch"
                  IsEnabled="False"
                  ColumnWidth="*" />
    </Grid>
</Window>
